<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Pianissimo Gacha</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&family=Mitr:wght@400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-start: #FFDEE9; --bg-end: #B5FFFC;
            --machine-body: #FFB7C5; --machine-dark: #FF8FA3;
            --text-color: #5D4E6D; --primary-btn: #FF847C;
        }

        body {
            font-family: 'Mitr', 'Fredoka', sans-serif;
            background: linear-gradient(135deg, var(--bg-start) 0%, #fff 50%, var(--bg-end) 100%);
            background-attachment: fixed;
            color: var(--text-color);
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            min-height: 100vh; margin: 0; 
            overflow: hidden; touch-action: manipulation;
        }

        /* --- UI ELEMENTS --- */
        .logo-img { position: absolute; top: 20px; left: 20px; width: 100px; z-index: 50; filter: drop-shadow(0 5px 10px rgba(0,0,0,0.1)); transition: transform 0.3s; }
        .logo-img:hover { transform: scale(1.05) rotate(-3deg); }

        .profile-bar {
            position: absolute; top: 20px; right: 20px; display: flex; align-items: center; gap: 15px;
            background: rgba(255, 255, 255, 0.6); padding: 8px 15px; border-radius: 50px;
            border: 2px solid #fff; box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1); backdrop-filter: blur(8px); z-index: 50;
        }
        .profile-img { width: 45px; height: 45px; border-radius: 50%; border: 3px solid #fff; }
        .profile-info { display: flex; flex-direction: column; line-height: 1.2; margin-right: 5px; }
        .profile-name { font-weight: 600; color: #555; }
        .profile-points { font-size: 0.9rem; color: #FF6B81; font-weight: bold; background: #FFF; padding: 2px 10px; border-radius: 10px; }
        .logout-btn { background: var(--primary-btn); color: white; text-decoration: none; padding: 6px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: bold; transition: 0.2s; }
        
        /* --- MACHINE --- */
        .gacha-container { 
            position: relative; width: 340px; height: 520px; margin-top: 20px; 
            filter: drop-shadow(0 20px 30px rgba(0,0,0,0.15)); 
            transform-origin: center center; transition: transform 0.3s ease;
        }
        .machine-body {
            width: 100%; height: 100%; background: linear-gradient(to bottom, var(--machine-body), var(--machine-dark));
            border-radius: 120px 120px 40px 40px; position: relative; border: 4px solid #fff;
            box-shadow: inset 10px 10px 20px rgba(255,255,255,0.4), inset -10px -10px 20px rgba(0,0,0,0.1);
        }
        .glass-dome {
            width: 280px; height: 280px; background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.1), rgba(200,240,255,0.2) 60%, rgba(150,220,255,0.4) 100%);
            border-radius: 50%; position: absolute; top: 30px; left: 50%; transform: translateX(-50%);
            border: 6px solid rgba(255,255,255,0.8); box-shadow: inset 10px 10px 30px rgba(255,255,255,0.7), inset -10px -10px 30px rgba(0,0,0,0.1);
            overflow: hidden; z-index: 2;
        }
        .reflection { position: absolute; top: 40px; left: 50px; width: 60px; height: 30px; background: white; border-radius: 50%; transform: rotate(-45deg); opacity: 0.6; filter: blur(2px); z-index: 10; }
        
        .capsule {
            width: 40px; height: 40px; border-radius: 50%; position: absolute;
            box-shadow: inset -2px -2px 5px rgba(0,0,0,0.2), 2px 2px 5px rgba(0,0,0,0.2);
            border: 2px solid rgba(255,255,255,0.3); background: linear-gradient(135deg, var(--ball-color) 50%, #ffffff 50%);
            transform-origin: center center; transition: all 0.5s ease-out;
        }

        @keyframes floatAround {
            0% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(20px, -30px) rotate(120deg); }
            66% { transform: translate(-20px, 20px) rotate(240deg); }
            100% { transform: translate(0, 0) rotate(360deg); }
        }

        .glass-dome.is-mixing .capsule { animation: chaoticMix 0.8s infinite linear !important; }
        @keyframes chaoticMix {
            0% { transform: translate(0,0) rotate(0deg) scale(1); }
            25% { transform: translate(-30px, 20px) rotate(90deg) scale(1.1); }
            50% { transform: translate(20px, -30px) rotate(180deg) scale(0.9); }
            75% { transform: translate(-10px, -10px) rotate(270deg) scale(1.05); }
            100% { transform: translate(0,0) rotate(360deg) scale(1); }
        }

        .shaking { animation: smoothRumble 0.8s infinite ease-in-out; transform-origin: bottom center; }
        @keyframes smoothRumble {
            0% { transform: rotate(0deg) translate(0, 0); }
            25% { transform: rotate(1deg) translate(2px, 1px); }
            50% { transform: rotate(0deg) translate(0, -2px); }
            75% { transform: rotate(-1deg) translate(-2px, 1px); }
            100% { transform: rotate(0deg) translate(0, 0); }
        }

        .controls { position: absolute; bottom: 40px; width: 100%; display: flex; flex-direction: column; align-items: center; }
        .coin-slot { width: 60px; height: 12px; background: #444; border-radius: 10px; border: 2px solid #ccc; margin-bottom: 15px; }
        .knob-base { width: 90px; height: 90px; background: #eee; border-radius: 50%; box-shadow: 0 5px 15px rgba(0,0,0,0.1); display: flex; justify-content: center; align-items: center; border: 4px solid #fff; }
        .knob-handle {
            width: 80px; height: 80px; background: radial-gradient(circle, #FFD700, #FFA500); border-radius: 50%; cursor: pointer; position: relative;
            box-shadow: 0 4px 0 #cc8400, 0 8px 10px rgba(0,0,0,0.2); transition: transform 0.1s;
        }
        .knob-handle::after { content: ''; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 60px; height: 12px; background: #cc8400; border-radius: 5px; }
        .knob-handle:active:not(:disabled) { transform: translateY(4px) rotate(45deg); box-shadow: 0 0 0 #cc8400; }
        .knob-handle:disabled { filter: grayscale(100%); cursor: not-allowed; }
        .dispenser {
            position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%);
            width: 100px; height: 50px; background: #333; border-radius: 10px 10px 25px 25px; border: 3px solid #fff;
            overflow: hidden; box-shadow: inset 0 5px 10px rgba(0,0,0,0.5); z-index: 1;
        }
        #rewardCapsule {
            position: absolute; width: 50px; height: 50px; border-radius: 50%;
            background: linear-gradient(135deg, #FFD700 50%, #fff 50%); top: -60px; left: 25px;
            border: 2px solid white; box-shadow: 0 5px 10px rgba(0,0,0,0.3);
            transition: top 0.6s cubic-bezier(1, -0.01, 0.58, 1.29); z-index: 5;
        }

        /* --- OPENING ANIMATION OVERLAY --- */
        .opening-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.85); backdrop-filter: blur(10px);
            display: flex; justify-content: center; align-items: center;
            z-index: 999; opacity: 0; visibility: hidden; transition: 0.3s;
        }
        .opening-overlay.active { opacity: 1; visibility: visible; }

        /* Container ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏™‡πà‡∏ß‡∏ô‡∏ó‡∏µ‡πà‡∏à‡∏∞‡πÅ‡∏Ñ‡∏õ‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠ */
        .capture-area {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            /* ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡πÉ‡∏™‡πÜ ‡πÄ‡∏ß‡∏•‡∏≤‡πÅ‡∏Ñ‡∏õ‡∏à‡∏∞‡πÑ‡∏î‡πâ‡∏™‡∏ß‡∏¢ */
            border-radius: 20px;
        }

        .big-capsule {
            width: 240px; height: 240px; position: relative;
            animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .cap-top {
            width: 100%; height: 50%; background: #FF6B81;
            border-radius: 120px 120px 0 0; position: absolute; top: 0; left: 0; z-index: 3; 
            transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            box-shadow: inset -5px 5px 15px rgba(255,255,255,0.4); border: 5px solid white; border-bottom: none;
        }
        .cap-bottom {
            width: 100%; height: 50%; background: white;
            border-radius: 0 0 120px 120px; position: absolute; bottom: 0; left: 0; z-index: 1; 
            box-shadow: inset -5px -5px 15px rgba(0,0,0,0.1); border: 5px solid white; border-top: none;
        }
        .reward-paper {
            position: absolute; width: 160px; height: 120px; background: #fff; top: 50%; left: 50%;
            transform: translate(-50%, -50%) scale(0); z-index: 10; border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2); display: flex; flex-direction: column; justify-content: center; align-items: center;
            text-align: center; padding: 10px; border: 2px dashed #ddd;
            transition: all 0.6s 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        }
        .reward-text-label { font-size: 0.9rem; color: #888; margin-bottom: 5px; }
        .reward-text-value { font-size: 1.4rem; font-weight: bold; color: #FF6B81; }
        
        .big-capsule.open .cap-top { transform: translateY(-150px) rotate(-20deg); }
        .big-capsule.open .reward-paper { transform: translate(-50%, -100%) scale(1.2) rotate(5deg); }

        /* ‡∏õ‡∏∏‡πà‡∏°‡∏Å‡∏î‡∏£‡∏±‡∏ö‡πÅ‡∏•‡∏∞‡∏õ‡∏∏‡πà‡∏°‡πÅ‡∏Ñ‡∏õ */
        .action-buttons {
            position: absolute; bottom: -140px; left: 50%; transform: translateX(-50%);
            display: flex; gap: 15px; opacity: 0; transition: 0.3s; pointer-events: none; z-index: 20;
        }
        .big-capsule.open .action-buttons { bottom: -120px; opacity: 1; pointer-events: all; }

        .claim-btn {
            background: #5865F2; color: white; border: none; padding: 12px 30px;
            font-size: 1.1rem; border-radius: 50px; cursor: pointer;
            box-shadow: 0 5px 0 #4752C4; transition: 0.2s; white-space: nowrap;
        }
        .claim-btn:hover { transform: translateY(-3px); box-shadow: 0 8px 0 #4752C4; }

        .capture-btn {
            background: #fff; color: #555; border: 2px solid #ddd; padding: 12px 15px;
            font-size: 1.1rem; border-radius: 50%; cursor: pointer;
            box-shadow: 0 5px 0 #ccc; transition: 0.2s; display: flex; align-items: center; justify-content: center;
        }
        .capture-btn:hover { transform: translateY(-3px); box-shadow: 0 8px 0 #ccc; background: #f9f9f9; }

        @keyframes popIn { from { transform: scale(0); } to { transform: scale(1); } }
        
        .login-box { background: rgba(255,255,255,0.8); padding: 40px; border-radius: 30px; text-align: center; box-shadow: 0 10px 30px rgba(0,0,0,0.1); backdrop-filter: blur(5px); }
        .btn-login { background: #5865F2; color: white; padding: 12px 30px; border-radius: 30px; text-decoration: none; font-size: 1.2rem; font-weight: bold; }

        @media (max-width: 600px) {
            .logo-img { left: 50%; transform: translateX(-50%); width: 90px; }
            .logo-img:hover { transform: translateX(-50%) scale(1.05); }
            .profile-bar { top: 70px; right: 50%; transform: translateX(50%); width: 90%; justify-content: space-between; padding: 5px 15px; }
            .profile-info { flex-direction: row; align-items: center; gap: 10px; }
            .profile-name { display: none; }
            .gacha-container { margin-top: 100px; transform: scale(0.8); }
            .login-box { width: 80%; margin-top: 50px; }
        }
    </style>
</head>
<body>
    <img src="/image_0.png" alt="Logo" class="logo-img">

    <% if (!user) { %>
        <div class="login-box">
            <h2>Pianissimo Gacha</h2>
            <p style="margin-bottom:20px; color:#777;">‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÄ‡∏™‡∏µ‡πà‡∏¢‡∏á‡∏î‡∏ß‡∏á!</p>
            <a href="/auth/discord" class="btn-login">Login with Discord</a>
        </div>
    <% } else { %>
        <div class="profile-bar">
            <div style="display:flex; align-items:center; gap:10px;">
                <img src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" class="profile-img">
                <div class="profile-info">
                    <div class="profile-name"><%= user.username %></div>
                    <div class="profile-points">üíé <span id="pointDisplay">...</span> P</div>
                </div>
            </div>
            <a href="/logout" class="logout-btn">Log out</a>
        </div>

        <div class="gacha-container" id="machine">
            <div class="machine-body">
                <div class="glass-dome" id="dome"><div class="reflection"></div></div>
                <div class="controls">
                    <div class="coin-slot"></div>
                    <div class="knob-base"><button id="spinBtn" class="knob-handle" onclick="spin()"></button></div>
                </div>
                <div class="dispenser"><div id="rewardCapsule"></div></div>
            </div>
        </div>

        <div class="opening-overlay" id="overlay">
            <div class="capture-area" id="captureTarget">
                <div class="big-capsule" id="bigCapsule">
                    <div class="cap-top" id="capTop"></div>
                    <div class="reward-paper">
                        <div class="reward-text-label">You got:</div>
                        <div class="reward-text-value" id="rewardText">...</div>
                    </div>
                    <div class="cap-bottom"></div>
                    
                    <div class="action-buttons" id="actionButtons">
                        <button class="claim-btn" onclick="closeOverlay()">‡∏£‡∏±‡∏ö‡∏£‡∏≤‡∏á‡∏ß‡∏±‡∏•</button>
                        <button class="capture-btn" onclick="captureReward()" title="‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û">üì∏</button>
                    </div>
                </div>
            </div>
        </div>

    <% } %>

    <script>
        <% if (user) { %>
            const socket = io();
            const pointDisplay = document.getElementById('pointDisplay');
            const spinBtn = document.getElementById('spinBtn');
            const machine = document.getElementById('machine');
            const dome = document.getElementById('dome');
            const rewardCapsule = document.getElementById('rewardCapsule');
            const overlay = document.getElementById('overlay');
            const bigCapsule = document.getElementById('bigCapsule');
            const capTop = document.getElementById('capTop');
            const rewardText = document.getElementById('rewardText');

            socket.on('pointUpdate', (p) => {
                pointDisplay.innerText = p;
                if(!isSpinning) spinBtn.disabled = (p < 50);
            });

            const colors = ['#FF6B6B', '#4ECDC4', '#FFE66D', '#FF9F43', '#54A0FF'];
            for(let i=0; i<15; i++) {
                let ball = document.createElement('div');
                ball.className = 'capsule';
                ball.style.setProperty('--ball-color', colors[Math.floor(Math.random()*colors.length)]);
                ball.style.left = (Math.random() * 240) + 'px'; 
                ball.style.top = (Math.random() * 240) + 'px';
                ball.style.transform = `rotate(${Math.random()*360}deg)`;
                ball.style.animation = `floatAround ${4+Math.random()*4}s infinite ease-in-out`;
                ball.style.animationDelay = `-${Math.random()*5}s`;
                dome.appendChild(ball);
            }

            let isSpinning = false;

            async function spin() {
                if(isSpinning) return;
                isSpinning = true;
                spinBtn.disabled = true;

                rewardCapsule.style.top = "-60px";
                bigCapsule.classList.remove('open');
                machine.classList.add('shaking');
                dome.classList.add('is-mixing');

                try {
                    const res = await fetch('/api/spin', { method: 'POST' });
                    const data = await res.json();

                    setTimeout(() => {
                        machine.classList.remove('shaking');
                        dome.classList.remove('is-mixing');

                        if(data.success) {
                            const randColor = colors[Math.floor(Math.random()*colors.length)];
                            rewardCapsule.style.background = `linear-gradient(135deg, ${randColor} 50%, #fff 50%)`;
                            rewardCapsule.style.top = "5px";

                            setTimeout(() => {
                                showOpeningScene(data.item, randColor);
                            }, 800);
                        } else {
                            alert(data.msg);
                            isSpinning = false;
                            checkPoints();
                        }
                    }, 1000);

                } catch(e) {
                    machine.classList.remove('shaking');
                    dome.classList.remove('is-mixing');
                    alert("Connection Error");
                    isSpinning = false;
                    checkPoints();
                }
            }

            function showOpeningScene(item, color) {
                capTop.style.background = color;
                rewardText.innerText = item;
                overlay.classList.add('active');
                setTimeout(() => {
                    bigCapsule.classList.add('open');
                }, 500);
            }

            function closeOverlay() {
                overlay.classList.remove('active');
                isSpinning = false;
                checkPoints();
            }

            // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏Ñ‡∏õ‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡∏£‡∏≤‡∏á‡∏ß‡∏±‡∏•
            function captureReward() {
                const target = document.getElementById('captureTarget');
                const btns = document.getElementById('actionButtons');
                
                // ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏Å‡πà‡∏≠‡∏ô‡πÅ‡∏Ñ‡∏õ ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏ß‡∏¢‡∏á‡∏≤‡∏°
                btns.style.display = 'none';

                html2canvas(target, { backgroundColor: null }).then(canvas => {
                    // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏î‡∏≤‡∏ß‡∏ô‡πå‡πÇ‡∏´‡∏•‡∏î
                    const link = document.createElement('a');
                    link.download = 'my-gacha-reward.png';
                    link.href = canvas.toDataURL();
                    link.click();

                    // ‡πÇ‡∏ä‡∏ß‡πå‡∏õ‡∏∏‡πà‡∏°‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°
                    btns.style.display = 'flex';
                }).catch(err => {
                    console.error(err);
                    alert("‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏†‡∏≤‡∏û‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à");
                    btns.style.display = 'flex';
                });
            }

            function checkPoints() {
                const currentP = parseInt(pointDisplay.innerText);
                if(currentP >= 50) spinBtn.disabled = false;
            }
        <% } %>
    </script>
</body>
</html>